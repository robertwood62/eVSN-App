<?xml version="1.0" encoding="utf-8" ?>
<Frame
    x:Class="eLiDAR.ControlGallery.ControlTemplates.StackLayoutControlTemplate"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Margin="60"
    Padding="0"
    CornerRadius="4">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ContentView
            Grid.Row="0"
            BackgroundColor="#00BCD4"
            HeightRequest="176">
            <Label
                Margin="15"
                Text="Card Title"
                TextColor="White"
                VerticalOptions="End" />
        </ContentView>
        <Label
            Grid.Row="1"
            Margin="15"
            Text="It is a long established fact that a reader will be distracted by the readable content of a page..." />
        <StackLayout
            x:Name="targetControl"
            Grid.Row="2"
            Padding="0,0,0,8"
            Orientation="Vertical"
            Spacing="15">
            <BoxView BackgroundColor="#000000" HeightRequest="1" />
            <Button
                Margin="15,0"
                BackgroundColor="Transparent"
                HorizontalOptions="Start"
                Text="BUTTON"
                TextColor="#00BCD4"
                Visual="Default" />
        </StackLayout>
    </Grid>
</Frame>