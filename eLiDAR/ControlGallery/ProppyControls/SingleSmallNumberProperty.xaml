<?xml version="1.0" encoding="UTF-8" ?>
<ScrollView
    x:Class="eLiDAR.ControlGallery.ProppyControls.SingleSmallNumberProperty"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="White">
    <StackLayout Padding="15,8">
        <Entry
            x:Name="TextEntryField"
            BackgroundColor="Transparent"
            Text="{Binding Value, Source={x:Reference TheStepper}}"
            TextChanged="TextEntryField_OnTextChanged" />
        <Stepper
            x:Name="TheStepper"
            Increment="1"
            Minimum="0" />


    </StackLayout>
</ScrollView>