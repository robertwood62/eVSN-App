<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Select Environment"
            BackgroundColor="{DynamicResource backgroundColor}"
            Shell.BackgroundColor="{DynamicResource backgroundColor}"
            Shell.ForegroundColor="{StaticResource cerulean}"
            Shell.TitleColor="{StaticResource cerulean}"
             x:Class="eLiDAR.Views.SelectEnvironment">
    <ContentPage.Content>
        <Grid Padding="0,0,0,0"  >
            <StackLayout MinimumHeightRequest="100" Orientation="Vertical" Padding="10,10,10,10" Margin="0,30,0,0">
                <Label Text="Enviornments" Style="{DynamicResource TextTitle}" />
                <Picker ItemDisplayBinding="{Binding Name}" ItemsSource="{Binding Environments}" SelectedItem="{Binding Environment}" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>