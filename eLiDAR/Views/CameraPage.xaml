<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="eLiDAR.Views.CameraPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Take a Photo"
    BackgroundColor="{DynamicResource backgroundColor}"
    Shell.BackgroundColor="{DynamicResource backgroundColor}"
    Shell.ForegroundColor="{StaticResource cerulean}"
    Shell.TitleColor="{StaticResource cerulean}">
    <ContentPage.Content>
        <FlexLayout
            AlignContent="Center"
            AlignItems="Center"
            Direction="Column"
            JustifyContent="Center">
            <Label Style="{StaticResource TextTitle}" Text="CameraView Coming Soon!" />
            <Label
                x:Name="PayloadLabel"
                Style="{StaticResource TextBody}"
                Text="{Binding Payload, FallbackValue=Broken}" />
        </FlexLayout>
    </ContentPage.Content>
</ContentPage>